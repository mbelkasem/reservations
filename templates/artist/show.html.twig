{% extends 'base.html.twig' %}

{% block title %}Fiche d'un artiste{% endblock %}

{% block body %}
    <h1>{{ artist.firstname }} {{ artist.lastname }}</h1>
    
    <h2>Liste des types</h2>
    <ul>
    {% for type in artist.getArtistTypes  %}
        <li>{{ type.type.getType() }}</li>
    {% endfor %}
    </ul>

    <nav><a href="{{ path('artist_index') }}">Retour à l'index</a></nav>
{% endblock %}


