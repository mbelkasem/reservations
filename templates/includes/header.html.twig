{% extends 'base.html.twig' %} {% block body %}

<header>
  <div class="jumbotron" style="padding: 1rem">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="my-0" style="font-size: 1rem">Projet Réservations</h1>
      <div>
        {% if app.user %}
        <a id="signin" class="btn btn-link" style="font-size: 1rem" href="#"
          >Mon Compte</a
        >
        <a
          id="signin"
          class="btn btn-link"
          style="font-size: 1rem"
          href="{{path ('app_logout')}}"
          >Me  Deconnecter</a
        >
        {% else %}
        <a
          id="login"
          class="btn btn-link mr-3"
          style="font-size: 1rem"
          href="{{path ('app_login')}}"
          >Se connecter</a
        >
        <a
          id="signin"
          class="btn btn-link"
          style="font-size: 1rem"
          href="/inscription"
          >S'inscrire</a
        >
        {% endif %}
      </div>
    </div>
  </div>

  <body>   
    {% if app.user and app.user.isverified == false %}
    <div class="alert alert-warning alert-dismissible " role="alert" style="font-size: 1rem" >
        <div class="d-flex justify-content-between">
            <div class="alert-message">
                <strong>Votre compte n'est activé</strong>, renvoyer le lien d'activation
            </div>
            <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">x</button>
        </div>
    </div>
{% endif %}

  </body>
</header>
{% endblock %}
