{% extends 'base.html.twig' %}

{% block title %}Fiche d'un artiste{% endblock %}

{% block body %}
    <h1>{{ artist.firstname }} {{ artist.lastname }}</h1>
    <div><a href="{{ path('artist_edit', {'id': artist.id}) }}">Modifier</a></div>

    <form method="post" action="{{ path('artist_delete', {'id': artist.id}) }}" 
        onsubmit="return confirm('Are you sure you want to delete this item?');" >
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artist.id) }}">
        {# <button class="btn">Supprimer</button> #}
    </form>
    {{ include('artist/_delete_form.html.twig') }}
    <nav><a href="{{ path('artist_index') }}">Retour Ã  l'index</a></nav>

{% endblock %}
